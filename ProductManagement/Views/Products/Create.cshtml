@model ProductsDTO

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
<h2 class="text-center mb-5">Add Product</h2>

<form method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="row">
                    <div class="col-10">
                        <div class="border p-3 mt-4">
                            <div class="form-floating py-2 col-12">
                                <input asp-for="@Model.Name" class="form-control border-0 shadow"></input>
                                <label asp-for="@Model.Name" class="ms-2"></label>

                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="py-2 col-12">
                                <label asp-for="@Model.Description" class="ms-2 text-muted"></label>
                                <textarea asp-for="@Model.Description" class="form-control border-0 shadow"></textarea>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="@Model.Price" class="form-control border-0 shadow"></input>
                                <label asp-for="@Model.Price" class="ms-2"></label>

                                <span asp-validation-for="@Model.Price" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="ImageUrl" class="form-control border-0 shadow"></input>
                                <label asp-for="@Model.ImageUrl" class="ms-2"></label>
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-6 col-md-3">
                                    <button type="submit" class="btn btn-primary form-control">Submit</button>
                                </div>
                                <div class="col-6 col-md-3">
                                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary border form-control">
                                        Back to List
                                    </a>
                                </div>

                            </div>
                </div>
            </div>
</form>


    </div>

</div>