@model List<Product>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row pt-4 pb-4">
            <div class="row">
                <div class="col-12 text-end">
                    <a  asp-controller="Products" asp-action="Create" class=" btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Product
                    </a>
                </div>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>ImageURL</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Price</td>
                        <td>@obj.Description</td>
                        <td><img src="/products/@obj.ImageUrl" width="100"></img></td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Products" asp-action="Edit" class="btn btn-primary mx-2" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                                <a asp-controller="Products" asp-action="Delete" class="btn btn-danger mx-2" asp-route-id="@obj.Id" onclick="return confirm('Are you sure?')"><i class="bi bi-trash-fill"></i>Delete</a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
